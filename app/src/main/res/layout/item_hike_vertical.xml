<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/ivHikeImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/image_hike_1" />

        </androidx.cardview.widget.CardView>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tvHikeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kerinc Mountain"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvHikeType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trail Walk"
                android:textSize="12sp"
                android:textColor="#666666"
                android:layout_marginTop="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@android:drawable/ic_menu_mylocation"
                    app:tint="#999999" />

                <TextView
                    android:id="@+id/tvHikeLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Malang, East Java"
                    android:textSize="11sp"
                    android:textColor="#999999"
                    android:layout_marginStart="4dp"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Edit Button -->
                <ImageButton
                    android:id="@+id/btnEdit"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/ripple_icon_button"
                    android:padding="7dp"
                    android:src="@drawable/ic_edit_24"
                    app:tint="#1976D2"
                    android:contentDescription="Edit" />

                <!-- Spacing -->
                <Space
                    android:layout_width="8dp"
                    android:layout_height="match_parent" />

                <!-- Delete Button -->
                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/ripple_icon_button_red"
                    android:padding="7dp"
                    android:src="@drawable/ic_delete_24"
                    app:tint="#D32F2F"
                    android:contentDescription="Delete" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>